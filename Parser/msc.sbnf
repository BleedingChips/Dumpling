_IGNORE := '\s+'
Code := '@\{[.\n]*?\}@'
Number := '\-?[1-9][0-9]*(.[0-9]+)?'
String := '(\".*?[^\\]\")|(\"\")'
Id := '[a-zA-Z_]+[a-zA-Z_0-9]*(?=([^a-zA-Z_0-9]+)|$)'

%%%

$ := <Statement>

<SinglePath> := Id
    := <SinglePath> '.' Id

<EquationStatement> := Id '=' Id : Id [1]
    := Id '=' String
    := Id '=' Number
    := 'marco' Id String
    := 'marco' Id Id
    := 'marco' Id Number
